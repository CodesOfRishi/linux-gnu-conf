#!/bin/bash

red=`tput setaf 196`
blue=`tput setaf 21`
green=`tput setaf 46`
reset=`tput sgr0`

filepath="$(dirname "$1")"
if [[ -f $1 ]]; then
	if [[ -x $1 ]]; then
		filename=$(basename -- "$1") # get file name without the path
	elif [[ `echo $1 | rg '.cpp$'` ]] || [[ `echo $1 | rg '.C$'` ]] || [[ `echo $1 | rg '.cc$'` ]] || [[ `echo $1 | rg '.CPP$'` ]] || [[ `echo $1 | rg '.c++$'` ]] || [[ `echo $1 | rg '.cp$'` ]] || [[ `echo $1 | rg '.cxx$'` ]]; then
		makecp $1
		[[ $? -ne 0 ]] && exit 1

		filename=$(basename -- "$1") # get file name without the path
		filename="${filename%.*}"  # file name without the extension
		filepath="."
	else 
		echo "${red}ERROR:${reset} Neither a C++ file nor an executable!"
		exit 1
	fi
else
	echo "${red}ERROR:${reset} File doesn't exist!"
	exit 1
fi

testcase=1
while [[ -f in$testcase ]]; do 
	tput bold  # Select bold mode
	if [[  $testcase -eq 1  ]]; then
		tput bold  # Select bold mode
		echo "${blue}╼╼╼╼╼ ${green}${blue}  TestCase: ($testcase) ╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼ ${green}${reset}"
	else 
		echo
		echo "${blue}╼╼╼╼╼ TestCase: ($testcase) ╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼╼${reset}"
	fi

	$filepath/$filename < in$testcase
	[[ $? -ne 0 ]] && break;
	testcase=$(($testcase+1))
done
