{
	/* diagnostic signs */
	"diagnostic.errorSign": "",
	"diagnostic.warningSign": "",
	"diagnostic.infoSign": "",
	"diagnostic.hintSign": "",

	/* clangd configrutions */
	"clangd.enabled": true,
	"clangd.path": "clangd",
	"clangd.fallbackFlags": ["-std=c++17", "-Wtype-limits", "-Wall", "-Wextra", "-O2", "-fwrapv", "-Wshadow", "-Wfloat-equal", "-Wconversion"],
	"clangd.checkUpdates": true
}
